<% if statuses_streams.empty? %>
<h3> Vous n'avez encore rien poster </h3>
<% else %>
  <% statuses_streams.each do |status| %>
    <div class="statusbody"> 
          <div class="votebox">

                       <a href="" id="<%= status.id %>" name="up" class="votes">
                       <div class='up'></div><%= status.ups %> j'aime</a>
         
                       <a href=""  id="<%= status.id %>"  name="down" class="votes">
                       <div class='down'></div><%= status.downs %> j'aime pas</a>

          </div>
          <div class="statusimg"><%= gravatar_for status %></div>
          <div class="statustext">
          <blockquote>
          <p><%= status.post %></p>
          <small><%= status.posted_by %></small>
          </blockquote>
          <div class="statustime">post√© le <%= status.created_at %></div></div> 
     </div>
  <% end %>
<% end %>
    
