<h1>Créer un compte de Padawan</h1>
<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "erreur") %> en créant ce compte : </h2>
      <ul>
      <% @user.errors.each do |attr,msg| %>
        <li><%=attr %> | <%=msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label "Prénom" %><br />
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label "Nom" %><br />
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :Mot_de_Passe %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :Confirmer_votre_mot_de_passe %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p class="button"><%= f.submit %></p>
<% end %>


